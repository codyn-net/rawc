matrix = "[1, 2, 3; 4, 5, 6]" | out

single_rowcol  = "matrix[1, 2]"           | out
single_linear  = "matrix[5]"              | out

offset_mat     = "matrix[[1, 2; 3, 4]]"   | out
rowcol         = "matrix[[0, 0], [1, 2]]" | out

noncont        = "matrix[[0, 1], [1, 2]]" | out
noncontrow     = "matrix[[0, 1], [0, 0]]" | out

node "n{1,2}"
{
    a' = "[0, 0, 0]"
}

edge from "n1" to "n2"
{
    "a'[0, 2]" += "[1, 2]"
}

node "n{3,4,5}"
{
    a = "[0, 0, 0]"
}

edge on "n3"
{
    "a'[0, 2]" += "[2, 3]"
}

edge on "n4"
{
    "a'[2, 0]" += "[2, 1]"
}

edge on "n4"
{
    "a'[2, 1, 0]" += "[4, 3, 2]"
}

edge on "n5"
{
    "a'[1, 2]" += "[-1, 2]"
}

